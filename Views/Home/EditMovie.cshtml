@{
    ViewData["Title"] = "Edit Movie Details";
    ViewData["MainTitle"] = "The Joel Hilton Film Collection";
    ViewData["MainSubtitle"] = "Edit a Movie ";
}

@model Movie

<div class="container w-50 bg-light rounded">
    <form class="" asp-action="EditMovie" method="post">
        <div class="form-group">
            <label for="categoryIn">Category:</label>
            <input class="form-control" id="categoryIn" value="@Model.Category" asp-for="Category" required>
        </div>
        <div class="form-group">
            <label for="titleIn">Title:</label>
            <input class="form-control" id="titleIn" value="@Model.Title" asp-for="Title" required>
        </div>
        <div class="form-group">
            <label for="yearIn">Year:</label>
            <input class="form-control" id="yearIn" value="@Model.Year" asp-for="Year" required>
        </div>
        <div class="form-group">
            <label for="directorIn">Director:</label>
            <input class="form-control" id="directorIn" value="@Model.Director" asp-for="Director" required>
        </div>
        <div class="form-group">
            <label for="raitingIn">Select a Rating:</label>
            <select class="form-control" id="ratingIn" asp-for="Rating" required>
                <option>Select an Option</option>
                <option>G</option>
                <option>PG</option>
                <option>PG-13</option>
                <option>R</option>
            </select>
        </div>
        <div class="form-group">
            <label for="editedIn">Edited:</label>
            <select class="form-control" id="editedIn" asp-for="Edited">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
        </div>
        <div class="form-group">
            <label for="lentTo">Lent To</label>
            <input class="form-control" id="lentTo" value="@Model.LentTo" asp-for="LentTo">
        </div>
        <div class="form-group">
            <label for="notesIn">Notes</label>
            <textarea class="form-control" id="notesIn" rows="3" maxlength="25" value="@Model.Notes" asp-for="Notes"></textarea>
        </div>
        <input hidden value=@Model.MovieID name="MovieID" />
        <div class="form-group">
            <button class="btn btn-success" type="submit">Save Changes</button>
            <a class="btn btn-danger" asp-controller="Home" asp-action="MyMovies">Cancel</a>
        </div>
    </form>
</div>