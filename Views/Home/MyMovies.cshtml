@{
    ViewData["Title"] = "Movies";
    ViewData["MainTitle"] = "The Joel Hilton Film Collection";
    ViewData["MainSubtitle"] = "A Comprehensive List of His favorite Films";
}
@model IEnumerable<HiltonMovies.Models.Movie>

<div class="container">
    <h1>My Movies</h1>
    <table class="table table-dark rounded">
        <thead>
            <tr>
                <th scope="col">Category</th>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Edited</th>
                <th scope="col">Lent To</th>
                <th scope="col">Notes</th>
            </tr>
        </thead>
        <tbody>
            @* C# Logic for cycling through data and printing to a table *@
            @foreach (HiltonMovies.Models.Movie m in Model)
            {
                @if (m.Title != "Independence Day")
                {
                    <tr>
                        <td>@m.Category</td>
                        <td>@m.Title</td>
                        <td>@m.Year</td>
                        <td>@m.Director</td>
                        <td>@m.Rating</td>
                        <td>@m.Edited</td>
                        <td>@m.LentTo</td>
                        <td>@m.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>