@{
    ViewData["Title"] = "Add Movie";
    ViewData["MainTitle"] = "The Joel Hilton Film Collection";
    ViewData["MainSubtitle"] = "Add to the Collection";
}

@model HiltonMovies.Models.Movie

<div class="container w-50 bg-light rounded">
    <form class="" asp-action="NewMovie" method="post">
        <div class="form-group">
            <label for="categoryIn">Category:</label>
            <input class="form-control" id="categoryIn" placeholder="Movie Category..." asp-for="Category" required>
        </div>
        <div class="form-group">
            <label for="titleIn">Title:</label>
            <input class="form-control" id="titleIn" placeholder="Movie title..." asp-for="Title" required>
        </div>
        <div class="form-group">
            <label for="yearIn">Year:</label>
            <input class="form-control" id="yearIn" placeholder='Enter the year (i.e. "1999")' asp-for="Year" required>
        </div>
        <div class="form-group">
            <label for="directorIn">Director:</label>
            <input class="form-control" id="directorIn" placeholder='Name of the director' asp-for="Director" required>
        </div>
        <div class="form-group">
            <label for="raitingIn">Select a Rating:</label>
            <select class="form-control" id="ratingIn" asp-for="Rating" required>
                <option>Select an Option</option>
                <option>G</option>
                <option>PG</option>
                <option>PG-13</option>
                <option>R</option>
            </select>
        </div>
        <div class="form-group">
            <label for="editedIn">Edited:</label>
            <select class="form-control" id="editedIn" asp-for="Edited">
                <option>No</option>
                <option>Yes</option>
            </select>
        </div>
        <div class="form-group">
            <label for="lentTo">Lent To</label>
            <input class="form-control" id="lentTo" placeholder='Person to whom the movie was lent' asp-for="LentTo">
        </div>
        <div class="form-group">
            <label for="notesIn">Notes</label>
            <textarea class="form-control" id="notesIn" rows="3" maxlength="25" asp-for="Notes"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Add Movie</button>
        </div>
    </form>
</div>